{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/types"],
    "types": ["webpack-env"]
  },
  "include": [
    "src/**/*",
    "webpack.config.ts"
  ]
}
